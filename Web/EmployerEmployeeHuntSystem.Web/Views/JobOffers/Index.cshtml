@model EmployerEmployeeHuntSystem.Web.ViewModels.JobOffers.JobOfferIndexViewModel

<h3>Job offers for @Model.Organization.Name @Html.ActionLink("Add New", "Add", new { organizationId = Model.Organization.Id }, new { @class = "btn btn-primary" })</h3>
<br />
<table class="table table-striped table-hover">
    <tr>
        <th>Registration Date</th>
        <th>Minimum Candidates Count</th>
        <th>Is Active</th>
        <th>Required Skills</th>
        <th></th>
    </tr>

    @foreach (var item in Model.JobOffers)
    {
        <tr @if (item.IsActive) { @Html.Raw("class=\"success\"")       } else { @Html.Raw("class=\"warning\"")      }>
            <td>
                <span>@item.RegistrationDate.ToShortDateString()</span>
            </td>
            <td>
                <span>@item.MinimumCandidatesCount</span>
            </td>
            <td>
                <span>@item.IsActive.ToString()</span>
            </td>
            <td>
                <span>@string.Join(", ", item.RequiredSkills.Select(s => s.Name))</span>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
