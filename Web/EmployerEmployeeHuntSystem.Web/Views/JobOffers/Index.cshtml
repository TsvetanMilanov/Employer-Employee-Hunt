@model EmployerEmployeeHuntSystem.Web.ViewModels.JobOffers.JobOfferIndexViewModel

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>Registration Date</th>
        <th>Minimum Candidates Count</th>
        <th>Is Active</th>
        <th>Required Skills</th>
        <th></th>
    </tr>

    @foreach (var item in Model.JobOffers)
    {
        <tr @if (item.IsActive) { @Html.Raw("class=\"success\"")   } else { @Html.Raw("class=\"warning\"")  }>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumCandidatesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <span>@string.Join(", ", item.RequiredSkills.Select(s => s.Name))</span>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
