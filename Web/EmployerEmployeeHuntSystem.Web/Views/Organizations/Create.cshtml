@model EmployerEmployeeHuntSystem.Web.ViewModels.Organizations.CreateOrganizationViewModel
@{ 
    ViewBag.Title = "Create Organization";
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Create", "Organizations", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken();

            <fieldset>
                <legend>Create new organization</legend>
                <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">Name</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Organization Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>