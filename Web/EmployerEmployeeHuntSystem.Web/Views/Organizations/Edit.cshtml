@model EmployerEmployeeHuntSystem.Web.ViewModels.Organizations.EditOrganizationViewModel
@{
    ViewBag.Title = "Edit";
}

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Edit", "Organizations", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken();

            <fieldset>
                <legend>Edit organization</legend>
                <div class="form-group">
                    @Html.HiddenFor(x => x.Id, new { @class = "form-control", value = Model.Id })
                    <label for="inputName" class="col-lg-2 control-label">Name</label>
                    <div class="col-lg-10">
                        @Html.ValidationMessageFor(x => x.Name)
                        @Html.EditorFor(x => x.Name, new { @class = "form-control", placeholder = "Organization Name" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>