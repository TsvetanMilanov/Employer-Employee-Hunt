@model EmployerEmployeeHuntSystem.Web.ViewModels.DeveloperProfiles.DeveloperProfileEditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Edit", "Developers", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Edit Developer Profile</legend>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(x => x.GithubProfile, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.ValidationMessageFor(x => x.GithubProfile)
                    @Html.TextBoxFor(x => x.GithubProfile, new { @class = "form-control wide-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.TopProjectsLinks, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.ValidationMessageFor(x => x.TopProjectsLinks)

                    @for (int i = 0; i < Model.TopProjectsLinks.Count; i++)
                    {
                        @Html.TextBoxFor(x => x.TopProjectsLinks[i], new { @class = "form-control wide-input" })
                        <br />
                    }

                    @if (Model.TopProjectsLinks.Count < 3)
                    {
                        Model.TopProjectsLinks.Add(string.Empty);

                        @Html.EditorFor(x => x.TopProjectsLinks[Model.TopProjectsLinks.Count - 1], new { @class = "form-control wide-input", placeholder = "New Project Link" })
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.IsAvailableForHire, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.EditorFor(x => Model.IsAvailableForHire, new { @class = "form-control" })
                    @Model.IsAvailableForHire
                </div>
            </div>
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </fieldset>
}

