@{
    ViewBag.Title = "Headhunters Control Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Headhunter Control Panel</h2>

<div class="row">
    <div class="col-md-6">
        <div class="list-group">
            <div href="#" class="list-group-item active">
                Job Offers
            </div>
            @Html.ActionLink("All Job Offers", "ListAll", "JobOffers", new { area = "Headhunters" }, new { @class = "list-group-item" })
            @Html.ActionLink("Currently Active Job Offers", "Active", "JobOffers", new { area = "Headhunters" }, new { @class = "list-group-item" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="list-group">
            <div href="#" class="list-group-item active">
                My Headhunter Profile
            </div>
            @Html.ActionLink("My Current Job Offers", "Current", "JobOffers", new { area = "Headhunters" }, new { @class = "list-group-item" })
        </div>
    </div>
</div>