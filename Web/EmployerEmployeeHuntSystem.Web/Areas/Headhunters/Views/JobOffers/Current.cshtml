@model EmployerEmployeeHuntSystem.Web.Areas.Headhunters.ViewModels.JobOffers.JobOffersListAllViewModel
@{
    ViewBag.Title = "All Job Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">My Currently Active Job Offers</h3>
<hr />
<table class="table table-striped table-hover">
    <tr>
        <th>Registration Date</th>
        <th>Minimum Candidates Count</th>
        <th>Current Candidates Count</th>
        <th>Required Skills</th>
        <th></th>
    </tr>

    @foreach (var item in Model.JobOffers)
    {
        <tr class="success">
            <td>
                <span>@item.RegistrationDate.ToShortDateString()</span>
            </td>
            <td>
                <span>@item.MinimumCandidatesCount</span>
            </td>
            <td>
                <span>@item.CandidatesCount</span>
            </td>
            <td>
                <span>@string.Join(", ", item.RequiredSkills.Select(s => s.Name))</span>
            </td>
            <td>
                <button data-id="@item.Id" data-action="expand" class="btn btn-primary">Actions</button>
            </td>
        </tr>
        <tr class="hidden" data-id="@item.Id">
            <td colspan="7" class="text-center">
                @Html.ActionLink("Search For Candidates", "CandidatesForJobOffer", "Developers", new { id = item.Id }, null) |

                @Html.ActionLink("Set As Inactive", "SetInActive", "JobOffers", new { id = item.Id }, null) |

                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@section scripts {
    <script>
        jqueryElementManipulation.toggleClassOfTableRow('expand', 'hidden');
    </script>
}